<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Minesweeper.RulesPage"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontFamily"
                        Value="Fredoka"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Style="{StaticResource centeredStackLayout}"
                 Margin="30">
        <Label Text="rules"
               Style="{StaticResource title}"/>

        <Label Text="The game begins with a grid of covered cells."/>
        <Label Text="A certain number of these cells will be mines, which, if uncovered, will end the game."/>
        <Label Text="To start, tap any of the cells in the grid to uncover it."/>
        <Label Text="The number shown in each cell tells you how many mines are in its adjacent cells."/>
        <Label Text="You can flag/unflag covered cells that you suspect to be mines by tapping the cell while the toggle switch is set to the ON position."/>

        <Button x:Name="mainmenuButton"
                Text="back"
                Clicked="BackButton_OnClicked"
                Style="{StaticResource buttonStyle}"/>
    </StackLayout>
</ContentPage>

