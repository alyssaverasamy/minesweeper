<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Minesweeper.Views.GameStart">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Sample"></Label>
                <Label Text="Sample"></Label>
            </StackLayout>
            <Grid x:Name="MineGrid" RowSpacing="1" ColumnSpacing="1">

            </Grid>
            <StackLayout Orientation="Horizontal">
                <Label Text="Dig"></Label>
                <Button x:Name="DigBtn" Clicked="SwitchtoDig" Text="*" BackgroundColor="LightPink"></Button>
                <Label Text="Flag"></Label>
                <Button x:Name="FlagBtn" Clicked="SwitchtoFlag" Text="~" BackgroundColor="LightBlue" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>