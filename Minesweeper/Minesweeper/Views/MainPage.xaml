<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Minesweeper.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Style="{StaticResource centeredStackLayout}">
        <Label Text="minesweeper"
               Style="{StaticResource maintitle}"/>

        <Button x:Name="startButton"
                Text="start game"
                Style="{StaticResource buttonStyle}"
                Clicked="StartButton_OnClicked"/>

        <Button x:Name="rulesButton"
                Text="rules"
                Style="{StaticResource buttonStyle}"
                Clicked="RulesButton_OnClicked"/>
    </StackLayout>

</ContentPage>

