<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Minesweeper.MainPage"
             NavigationPage.HasNavigationBar="False"
             Style="{StaticResource pageStyle}">

    <StackLayout Style="{StaticResource centeredStackLayout}">
        <Label Text="minesweeper"
               Style="{StaticResource title}"></Label>
        <Button x:Name="startButton"
                Text="start game"
                Style="{StaticResource buttonStyle}"
                WidthRequest="150"
                HorizontalOptions="Center"
                Clicked="StartButton_OnClicked"></Button>
        <Button x:Name="rulesButton"
                Text="rules"
                Style="{StaticResource buttonStyle}"
                WidthRequest="150"
                HorizontalOptions="Center"
                Clicked="RulesButton_OnClicked"></Button>
    </StackLayout>

</ContentPage>

