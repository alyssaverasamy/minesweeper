<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Minesweeper.RulesPage"
    NavigationPage.HasNavigationBar="False"
    Style="{StaticResource pageStyle}">
    <StackLayout Style="{StaticResource centeredStackLayout}"
                 Margin="30">
        <Label Text="rules"
               Style="{StaticResource title}"></Label>
        <Label Text="The game begins with a grid of covered cells."></Label>
        <Label Text="A certain number of these cells will be mines, which, if uncovered, will end the game."></Label>
        <Label Text="To start, tap any of the cells in the grid to uncover it."></Label>
        <Label Text="The number shown in each cell tells you how many mines are in its adjacent cells."></Label>
        <Label Text="You can flag covered cells that you suspect to be mines by long-pressing the cell."></Label>
        <Button x:Name="mainmenuButton"
                Text="main menu"
                Clicked="MenuButton_OnClicked"
                Style="{StaticResource buttonStyle}"></Button>

    </StackLayout>
</ContentPage>

