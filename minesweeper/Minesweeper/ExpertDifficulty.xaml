<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Minesweeper.ExpertDifficulty">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">

                <Button x:Name="pauseButton"
                    Text="pause"
                    Style="{StaticResource buttonStyle}"/>
                <!--Clicked="PauseButton_OnClicked"-->

                <Label x:Name="minesLeft"
                   Text=""
                   Style="{StaticResource counter}"/>

                <Label x:Name="timer"
                   Text=""
                   Style="{StaticResource counter}"/>
            </StackLayout>

            <Grid x:Name="mineGridExpert" ColumnSpacing="1" RowSpacing="1">

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>